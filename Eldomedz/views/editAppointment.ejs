<main>
    <h1>Edit Appointment</h1>
    <form id="editAppointmentForm" action="/appointment/edit/<%= appointment.id %>" method="POST">
      <label for="doctor">Choose Doctor:</label>
      <select id="doctor" name="doctor_id" required>
        <option value="">Select a doctor</option>
        <% doctors.forEach(doctor => { %>
          <option value="<%= doctor.id %>" <%= doctor.id === appointment.doctor_id ? 'selected' : '' %>><%= doctor.name %></option>
        <% }); %>
      </select>
  
      <label for="date">Appointment Date:</label>
      <input type="date" id="date" name="appointment_date" value="<%= appointment.appointment_date.split('T')[0] %>" required>
  
      <label for="time">Appointment Time:</label>
      <input type="time" id="time" name="appointment_time" value="<%= appointment.appointment_date.split('T')[1] %>" required>
  
      <button type="submit">Update Appointment</button>
    </form>
    <a href="/appointment">Cancel</a>
  </main>
  