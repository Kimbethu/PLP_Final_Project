<main>
  <h1>Add a New Doctor</h1>
  <form id="addDoctorForm" method="POST" action="/api/doctors">
    <label for="doctor_name">Doctor Name:</label>
    <input type="text" id="doctor_name" name="doctor_name" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>

    <label for="doctor_specialization">Doctor Specialization:</label>
    <input type="text" id="doctor_specialization" name="doctor_specialization" required>

    <label for="availability">Availability (JSON format):</label>
    <textarea id="availability" name="availability" required placeholder='{"monday": "9am-5pm", "tuesday": "9am-5pm"}'></textarea>

    <button type="submit">Add Doctor</button>
  </form>
</main>
